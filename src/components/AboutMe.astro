---
import HeroTerminal from "@components/HeroTerminal.astro";
import GithubIcon from "@components/icons/GithubIcon.astro";
import StackPill from "@components/StackPill.astro";
import DownloadIcon from "@components/icons/DownloadIcon.astro";
import EmailIcon from "@components/icons/EmailIcon.astro";
import MapIcon from "@components/icons/MapIcon.astro";
import LinkedinIcon from "@components/icons/LinkedinIcon.astro";
import { EMAIL, LINKEDIN_LINK, GITHUB_LINK, DRIVE_CV } from "astro:env/client";
---

<div class="grid lg:grid-cols-2 gap-4 items-center">
  <!-- Tarjeta del Desarrollador -->
  <article
    class="bg-slate-800/60 backdrop-blur-xl border border-slate-700/50 shadow-2xl hover:shadow-slate-500/20 transition-all duration-500 rounded-lg"
  >
    <header class="p-4">
      <!-- Encabezado de la Tarjeta -->
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center space-x-2">
          <span class="w-2.5 h-2.5 bg-green-400 rounded-full animate-pulse"
          ></span>
          <span class="text-green-400 font-mono text-xs">en línea </span>
        </div>
        <span class="text-slate-400 font-mono text-xs">perfil.dev</span>
      </div>

      <!-- Sección de Perfil -->
      <div class="flex items-start space-x-3 mb-4">
        <div class="relative">
          <div
            class="w-16 h-16 bg-gradient-to-br from-slate-600/20 to-slate-500/20 rounded-lg flex items-center justify-center border border-slate-600/30"
          >
            <span class="text-2xl">
              <img
                src="/profile.webp"
                alt="Francisco Rojas"
                class="w-full h-full rounded-lg object-cover"
              />
            </span>
          </div>
        </div>

        <div class="flex-1">
          <h1 class="text-xl font-bold text-white mb-1">Francisco Rojas</h1>
          <p class="text-slate-300 font-mono mb-2 text-sm">
            Desarrollador Backend
          </p>
          <ul class="flex items-center gap-2 text-slate-400 mb-3">
            <li>
              <div
                class="flex items-center gap-1 bg-slate-700/50 px-2 py-1 rounded-full"
              >
                <MapIcon />
                <span class="text-xs font-medium">Venezuela</span>
              </div>
            </li>
            <li>
              <div
                class="flex items-center gap-1 bg-green-900/50 px-2 py-1 rounded-full"
              >
                <span
                  class="inline-block w-2 h-2 bg-green-400 rounded-full animate-pulse"
                  aria-label="Disponible"
                  role="status"></span>
                <span class="text-xs text-green-300 font-medium"
                  >Disponible</span
                >
              </div>
            </li>
          </ul>
          <p class="text-slate-300 mb-3 leading-relaxed text-xs">
            Técnico Superior en Informática y estudiante de Ingeniería en
            Sistemas, especializado en desarrollo backend, con experiencia
            complementaria en frontend. He trabajado en aplicaciones web
            completas utilizando Laravel y MySQL, además de configurar entornos
            de desarrollo y producción en sistemas Linux. Me considero
            autodidacta, proactivo y orientado a resolver problemas con un
            enfoque práctico. Valoro tanto la autonomía como el trabajo en
            equipo, convencido de que ese equilibrio es clave para crecer
            profesionalmente y entregar soluciones de calidad.
          </p>
          <ul class="flex flex-wrap gap-1">
            {
              ["PHP", "Laravel", "Node.js", "Python"].map((stack) => (
                <StackPill>{stack}</StackPill>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- Vista Previa del Código -->
      <section
        class="bg-slate-900/70 rounded-md p-2 border border-slate-700/50 mb-3"
      >
        <div class="flex items-center justify-between mb-1">
          <span class="text-slate-400 text-xs font-mono">
            proyecto_actual.php
          </span>
          <div class="flex space-x-1">
            <div class="w-2 h-2 bg-red-400 rounded-full"></div>
            <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
          </div>
        </div>
        <pre
          class="font-mono text-xs text-slate-300">
    <code><span class="text-purple-400">&lt;?php</span></code>
    <code><span class="text-blue-400">class</span> <span class="text-yellow-400">DesarrolladorBackend</span> {'{'}</code>
    <code class="ml-4"><span class="text-green-400">public function</span> <span class="text-blue-400">construirAPI</span>() {'{'}</code>
    <code class="ml-6"><span class="text-orange-400">return</span> <span class="text-green-300">'Listo para trabajar'</span>;</code>
    <code class="ml-4">{'}}'}</code>
    <code><span class="text-purple-400">?&gt;</span></code>
          </pre>
      </section>

      <!-- Enlaces Sociales -->
      <nav
        aria-label="Redes sociales"
        class="flex justify-center space-x-3 mb-1 border-t border-slate-700/50"
      >
        <ul class="flex flex-row items-center space-x-3">
          <li>
            <a
              href={LINKEDIN_LINK}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn de Francisco Rojas"
              class="text-white hover:text-slate-300 transition-colors p-1"
            >
              <LinkedinIcon />
            </a>
          </li>
          <li>
            <a
              href={GITHUB_LINK}
              target="_blank"
              aria-label="GitHub de Francisco Rojas"
              rel="noopener noreferrer"
              class="text-white hover:text-slate-300 transition-colors p-1"
            >
              <GithubIcon />
            </a>
          </li>
        </ul>
      </nav>

      <!-- Botones de Acción -->
      <div class="flex space-x-2">
        <a
          href={DRIVE_CV}
          class="flex-1 gap-1 bg-gradient-to-r from-slate-600 to-slate-700 hover:from-slate-700 hover:to-slate-800 border-0 font-mono px-2 py-1 rounded-md text-white transition-all duration-200 flex items-center justify-center text-xs"
          type="button"
          aria-label="Descargar CV"
        >
          <DownloadIcon />
          Descargar CV
        </a>
        <a
          href={`mailto:${EMAIL}`}
          target="_blank"
          class="flex-1 border border-slate-600/50 hover:border-slate-500 hover:bg-slate-700/10 text-white font-mono bg-transparent px-2 py-1 rounded-md transition-all duration-200 flex items-center justify-center text-xs"
          aria-label="Contactar"
        >
          <EmailIcon />
          <span class="ml-1">Contactar</span>
        </a>
      </div>
    </header>
  </article>

  <!-- Terminal -->
  <HeroTerminal />
</div>
