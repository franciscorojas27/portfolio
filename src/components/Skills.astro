---
import FragmentIcon from "@components/icons/FragmentIcon.astro";
import DataBaseIcon from "@components/icons/DataBaseIcon.astro";
import FrameWorkIcon from "@components/icons/FrameWorkIcon.astro";
import BrainIcon from "@components/icons/BrainIcon.astro";
import BrainRedIcon from "@components/icons/BrainRedIcon.astro";
import ServerIcon from "@components/icons/ServerIcon.astro";
import TerminalIcon from "@components/icons/TerminalIcon.astro";
import CurlyBracesIcon from "@components/icons/CurlyBracesIcon.astro";
import BoxIcon from "@components/icons/BoxIcon.astro";
import ComputerIcon from "@components/icons/ComputerIcon.astro";
import RedIcon from "@components/icons/RedIcon.astro";
import SkillItem from "@components/SkillItem.astro";
import SkillCard from "./SkillCard.astro";
---

<h3
  class="text-2xl font-bold text-center mb-8 bg-gradient-to-r from-slate-200 to-slate-400 bg-clip-text text-transparent font-mono"
>
  $habilidades = [
</h3>

<!-- Grid Bento -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4">
  <!-- Habilidades Backend -->
  <SkillCard title="Backend" description="Especializaci贸n">
    <ServerIcon slot="icon" />
    {
      [
        { name: "Laravel", icon: ServerIcon },
        { name: "Node.js", icon: TerminalIcon },
        { name: "Docker", icon: BoxIcon },
        { name: "APIs REST", icon: ServerIcon },
      ].map((backend: { name: string; icon: any }) => (
        <SkillItem>
          <backend.icon slot="icon" />
          {backend.name}
        </SkillItem>
      ))
    }
  </SkillCard>

  <!-- Lenguajes de Programaci贸n -->
  <SkillCard title="Lenguajes" description="Lenguajes de programaci贸n">
    <FragmentIcon slot="icon" />
    {
      [
        { name: "PHP", icon: FragmentIcon },
        { name: "Python", icon: FragmentIcon },
        { name: "JavaScript", icon: CurlyBracesIcon },
        { name: "TypeScript", icon: FragmentIcon },
      ].map((lang: { name: string; icon: any }) => (
        <SkillItem>
          <lang.icon slot="icon" />
          {lang.name}
        </SkillItem>
      ))
    }
  </SkillCard>

  <!-- Habilidades Frontend -->

  <SkillCard title="Frontend" description="Familiarizado con:">
    <FrameWorkIcon slot="icon" />
    {
      [
        { name: "React", icon: FragmentIcon },
        { name: "Astro", icon: FragmentIcon },
        { name: "TailwindCSS", icon: FragmentIcon },
        { name: "HTML/CSS", icon: FrameWorkIcon },
        { name: "Astro", icon: FrameWorkIcon },
      ].map((frontend: { name: string; icon: any }) => (
        <SkillItem>
          <frontend.icon slot="icon" />
          {frontend.name}
        </SkillItem>
      ))
    }
  </SkillCard>
  <!-- Bases de Datos -->
  <SkillCard title="Bases de datos" description="Familiarizado con:">
    <DataBaseIcon slot="icon" />
    {
      ["MySQL", "PostgreSQL", "MongoDB", "MongoDB Atlas"].map((db) => (
        <SkillItem>
          <DataBaseIcon slot="icon" />
          {db}
        </SkillItem>
      ))
    }
  </SkillCard>
  <!-- Herramientas de IA -->
  <SkillCard title="Herramientas de IA" description="Herramientas de IA">
    <RedIcon slot="icon" />
    {
      [
        {
          name: "ChatGPT",
          icon: BrainIcon,
          description: "Asistente de IA",
        },
        {
          name: "Claude",
          icon: BrainIcon,
          description: "Desarrollo con IA",
        },
        {
          name: "GitHub Copilot",
          icon: BrainIcon,
          description: "Asistente de c贸digo",
        },
        {
          name: "MCP",
          icon: BrainRedIcon,
          description: "Model Context Protocol",
        },
      ].map((tool) => (
        <SkillItem>
          <tool.icon slot="icon" />
          <div class="flex flex-col">
            <span class="font-medium text-slate-200 font-mono text-xs">
              {tool.name}
            </span>
            <span class="text-xs text-slate-400">{tool.description}</span>
          </div>
        </SkillItem>
      ))
    }
  </SkillCard>
</div>

<div class="text-center mt-8">
  <span
    class="text-2xl font-bold bg-gradient-to-r from-slate-200 to-slate-400 bg-clip-text text-transparent font-mono"
  >
    ];
  </span>
</div>
